button(ng-click='newMessage()') New Message

script(type="text/ng-template", id="myModalContent.html")
    div(class="modal-header")
        h3(class="modal-title") New Message
    div(class="modal-body")
        label(for='folder') Folder:
        input(type="text" class="form-control" ng-model='form.chose', name='folder')
        br
        label(for='msgInput') Message:
        textarea(class="form-control" ng-model='form.newText', cols='50', rows='15',name='msgInput' )
        //p
        //    button(class="btn btn-success" ng-click='submitPost()') Submit Post
    div(class="modal-footer")
        button(class="btn btn-primary" ng-click="ok()") OK
        button(class="btn btn-warning" ng-click="cancel()") Cancel

h2 Folder-List
style
    button {margin-top: 15px; margin-right: 20px; margin-bottom: 15px; margin-left: 20px;}

|Open Only One Folder?
input(type='checkbox', ng-model='oneFolder')

accordion(close-others='oneFolder')
    accordion-group(ng-repeat = "folder in folderList" heading='{{folder._id}}')
        p
            //a(href="#/folder/{{folder._id}}") {{folder._id}}
            br
            button(class="btn btn-danger", ng-click="deleteFolder(folder._id)" value="{{folder._id}}" id="{{folder._id}}" style="margin-left:15px").
                Delete
            button(class="btn btn-primary", ng-click="renameFolder(folder._id, folder.newName)" value="{{folder._id}}" style="margin-left:15px").
                Rename
            div(style='width: '+(100/4)+'%')
                input(type="text" ng-init="folder.newName = folder._id" ng-model="folder.newName" popover="Insert a new name for {{folder._id}}"  popover-placement="bottom" popover-trigger="focus" class="form-control")

        //MESSAGELIST
        div(ng-controller='myAppMessageController' ng-model='folderName' ng-init='folderName = folder._id')
            h3 Message List
            button(class="btn btn-primary" ng-click="isCollapsed = !isCollapsed" ng-init="isCollapsed = true") Show Messages
            br
            div(collapse="isCollapsed")
                //|Hallo
                div(ng-repeat = "msg in messageList")
                    fieldset(style='border-style: solid; border-width: 3px;')
                        a(href="#/folder/{{folderName}}/{{msg._id}}") SUBJ: {{msg._subject}}
                        br
                        b Text:
                        br
                        textarea(class="form-control" rows="10" cols="60" readonly).
                            {{msg._text[0]}}
                        br
                        button(class="btn btn-danger", ng-click="deleteMessage(msg._id)" value="{{msg._id}}" id="{{msg._id}}").
                            Delete
                        button(class="btn btn-danger", ng-click="moveMessage(msg._id, chose._id)").
                            Move
                        select(ng-model="chose" ng-options="folder._id for folder in folderList" id="chose")

                        br
                        //ONEMESSAGE
                        div(ng-controller='myAppOneMessageController' ng-model='parentFolder' ng-init='parentFolder = folderName')
                            div(ng-model='mId' ng-init='mId = msg._id')
                            style
                                textarea {width: 50%; height: auto;}
                            button(class="btn btn-default" ng-click="isCollapsed = !isCollapsed" ng-init="isCollapsed = true") Detail
                            br
                            div(collapse="isCollapsed")
                                div(style='width: ' + (100 / 2) + '%')
                                    table
                                        tr
                                            td Message-ID:
                                            td
                                                span(class="label label-default").
                                                    {{msg._id}}
                                        tr
                                            td Date:
                                            td
                                                span(class="label label-default").
                                                    {{msg.date}}
                                        tr
                                            td Sender:
                                            td
                                                span(class="label label-default").
                                                    {{msg.sender}}
                                    label Recipients:
                                    textarea(class="form-control" cols="100" readonly).
                                        {{msg.recipients}}
                                    h5 Text:
                                        textarea(class="form-control" rows="20" cols="100" name="messageOutput" readonly).
                                            {{msg.text}}
                                    br
                                    //button(class="btn btn-danger", ng-click="deleteMessage()").
                                    //    Delete
                                    //br
