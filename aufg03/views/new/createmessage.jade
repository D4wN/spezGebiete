extends ../layout
block content
    h2 New Message:
        form(method="POST" action="/newMessage/")
           textarea(name="newText" placeholder="Enter New Message")
           br
           select(size=folders.length name="chose")
               - for (var i=0; i<folders.length; i++)
                  option #{folders[i]._id}
           br
           input(type="submit" value="Add new Message")